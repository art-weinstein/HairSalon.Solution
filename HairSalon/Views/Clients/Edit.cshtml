@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit Clients Page</h2>

<h4>Edit this client</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model=>model.ClientId)

  @Html.LabelFor(model=>model.ClientName)
  @Html.EditorFor(model=>model.ClientName)

  @Html.LabelFor(model=>model.ClientPhone)
  @Html.EditorFor(model=>model.ClientPhone)

  @Html.LabelFor(model=>model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to clients", "Index")</p>
<p>@Html.ActionLink("Back to Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>